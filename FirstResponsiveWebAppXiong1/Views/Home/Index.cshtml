@model FirstResponsiveWebAppXiong1.Models.YearModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1>First Responsive Web App</h1>
    <form asp-action="Index" method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Name">Name:@Model.Name</label>
            <input asp-for="Name" />
        </div>
        <div>
            <label asp-for="BirthYear">Birth Year:@Model.BirthYear.</label>
            <input asp-for="BirthYear" />
        </div>
        <div>
            <label>Message:</label>
            <input value="@ViewBag.BY" readonly />
        </div>
        <button type="submit">Submit</button>
        <button type="reset" onclick="this.form.reset();return false">Clear</button>
    </form>
</body>
</html>
